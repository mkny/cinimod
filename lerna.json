{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "access": "public"
    },
    "version": {
      "allowBranch": [
        "main",
        "master"
      ],
      "conventionalCommits": true,
      "message": "chore(release): publish %s"
    }
  },
  "ignoreChanges": [
    "**/package.json",
    "**/*.md",
    "**/__tests__/**",
    "**/node_modules/**"
  ]
}
